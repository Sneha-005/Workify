<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="9dp"
    android:id="@+id/RecentSearchJobElement">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0" />



        <ImageView
            android:id="@+id/CompanyNameIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/institute"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/CompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Company Name"
            android:textColor="@color/background"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/CompanyNameIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/YearOfWorkIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/fresher"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            app:layout_constraintTop_toBottomOf="@id/CompanyNameIcon" />

        <TextView
            android:id="@+id/YearOfWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Year of Work"
            android:textColor="@color/background"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/YearOfWorkIcon"
            app:layout_constraintTop_toBottomOf="@id/CompanyName" />

        <ImageView
            android:id="@+id/Position_Icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/calender"
            app:layout_constraintStart_toStartOf="@id/guideline1"
            app:layout_constraintTop_toBottomOf="@id/YearOfWorkIcon" />

        <TextView
            android:id="@+id/Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Position in Company"
            android:textColor="@color/background"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/Position_Icon"
            app:layout_constraintTop_toBottomOf="@id/YearOfWorkIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>